<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Customer Payment Sequence -->
    <record id="seq_customer_payment" model="ir.sequence">
        <field name="name">Customer Payment Sequence</field>
        <field name="code">account.payment.customer</field>
        <field name="prefix">CPAY/%(year)-s%(month)-s%(day)s/</field>
        <field name="padding">5</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>

    <!-- Vendor Payment Sequence -->
    <record id="seq_vendor_payment" model="ir.sequence">
        <field name="name">Vendor Payment Sequence</field>
        <field name="code">account.payment.vendor</field>
        <field name="prefix">VPAY/%(year)-s%(month)-s%(day)s/</field>
        <field name="padding">5</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>
</odoo>
